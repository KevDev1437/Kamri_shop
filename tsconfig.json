{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@kamri/ui": ["../../packages/ui/src"],
      "@kamri/ui/*": ["../../packages/ui/src/*"],
      "@kamri/lib": ["../../packages/lib/src"],
      "@kamri/lib/*": ["../../packages/lib/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

